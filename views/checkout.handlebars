            <input type="hidden" name="productos" id="conproductos" value="">
            <button type="submit">Enviar Solicitud</button>

        </form>
 


    <script>

         //Carga de los productos al localstorage
        var listacarrito = localStorage.getItem("listaproductos");
        if (listacarrito == null) {
            listacarrito = [];
        } else {
            listacarrito = JSON.parse(listacarrito);
        }



        let input_productos = document.querySelector("#conproductos");
        input_productos.value = JSON.stringify(listacarrito);
  
    </script>

