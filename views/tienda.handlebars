    <section class="banner">

        <section class="banner__section">
            <h1 class="banner__section__h1">Store</h1>
        </section>

        <article class="banner__descripcion">
            <div class="banner__filtros">
                <div class="banner__title">
                    <h2 class="banner__title__h1">Categories</h2>
                </div>

                <div class="filtro__descripcion">
                    <p>Best sellers</p>
                    <ul class="filtro__opciones">
                        <li class="filtro__opciones__opcion"><a href="/temporada/Semana">Week</a></li>
                        <li class="filtro__opciones__opcion"><a href="/temporada/Mes">Month</a></li>
                        <li class="filtro__opciones__opcion"><a href="/temporada/Año">Year</a></li>
                    </ul>
                </div>

                <div class="filtro__descripcion">
                    <p>Price</p>
                    <ul class="filtro__opciones">
                        <li class="filtro__opciones__opcion"><a href="/precio/50">Since 50,00</a></li>
                        <li class="filtro__opciones__opcion"><a href="/precio/100">Since 100,00</a></li>
                        <li class="filtro__opciones__opcion"><a href="/precio/200">Since 200,00</a></li>
                    </ul>
                </div>

                <div class="filtro__descripcion">
                    <p>Product</p>
                    <ul class="filtro__opciones">
                        <li class="filtro__opciones__opcion"><a href="/categoria/Tshirt">Tshirt</a></li>
                        <li class="filtro__opciones__opcion"><a href="/categoria/CD">CD</a></li>
                        <li class="filtro__opciones__opcion"><a href="/categoria/">Card</a></li>
                    </ul>
                </div>

                <div class="filtro__descripcion">
                    <a href="/carrito">
                        <img src="/images/carro.png" alt="" class="filtro__descripcion__carro"> 
                    </a>
                </div>

            </div>

            <div class="banner__products">
                {{#each productos}}

                <article class="view__producto__item">
                    <a href="/producto/{{nombre}}">
                        <section class="producto__item__imagen">
                            <img src="/{{imagen}}" alt="producto" class="img" />
                        </section>

                        <section class="producto__item__desc">
                            <h4 class="producto__item__desc__titulo"><strong>{{nombre}}</strong></h4>
                            <h6 class="producto__item__desc__categoria">{{categoria}}</h6>
                            <h6 class="producto__item__desc__precio">{{precio}}</h6>
                        </section>
                    </a>
                </article>


                {{/each}}
            </div>




            </div>






        </article>

    </section>

